<h1>Editing Theater #<%= @theaters.id %></h1>

<hr>
<%= form_tag(update_url(@theaters.id), :method => :put) do %>
  <p><%= label_tag :name %>
    <%= text_field_tag :name, @theaters.name %></p>
  <p><%= label_tag :address %>
    <%= text_field_tag :address, @theaters.address %></p>
  <p><%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, @theaters.phone_number %></p>
  <p><%= submit_tag :update %></p>
<% end %>
