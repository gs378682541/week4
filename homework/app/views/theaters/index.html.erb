<h1>Theater Database</h1>

<%= image_tag 'rails.png'%>
<p><%= link_to "Add a New Theater", new_theater_path %></p>


<table>
  <thead>
    <tr>
      <th>ID Number</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone number</th>
    </tr>
  </thead>
  <tbody>
    <% @theaters.each do |thea| %>
      <tr>
        <td><%= link_to thea.id, thea %></td>
        <td><%= thea.name %></td>
        <td><%= thea.address %></td>
        <td><%= thea.phone_number %></td>
        <td>
          <%= link_to "Edit", edit_theater_path(thea) %>
          <%= link_to "Delete", thea, :method => :delete %>
    <% end %>
  </tbody>

</table>
